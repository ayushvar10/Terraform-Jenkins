# Create Security Group - SSH Traffic

resource "aws_security_group" "ssh-sg" {
  description = "this is for ssh security group"
  name        = "ssh-sg"
  ingress {
    description = "ssh"
    from_port   = 22
    to_port     = 22
    protocol    = "tcp"
    cidr_blocks = ["0.0.0.0/0"]
  }

  egress {
    from_port   = 0
    to_port     = 0
    protocol    = "-1"
    cidr_blocks = ["0.0.0.0/0"]
  }

}

